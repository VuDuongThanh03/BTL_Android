<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEFCF9"
    android:orientation="vertical"
    tools:context=".cong_viec.CongViecActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:paddingVertical="20px"
            android:text="Công việc"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold">

        </TextView>
        <ImageView
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/dots">

        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_panel1">

        <ListView
            android:id="@+id/lvcongviec"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/customlv_cong_viec"></ListView>
    </LinearLayout>

</LinearLayout>